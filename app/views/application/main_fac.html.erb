<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    max-height: 100px;
    width: 100%;
}

#title{
  color: black;
  background-color: white;
}

#table-wrapper {
  position:relative;
}

#table-scroll {
  height:150px;
  overflow:auto;  
  margin-top:20px;
  width: 50%;
}

tr:nth-child(even) {
    background-color: #dddddd;
}

tr:nth-child(odd) {
  color: black;
  background-color: gray;
}

#table-wrapper table thead th .text {
  position:relative;   
  top:-20px;
  z-index:2;
  height:20px;
  width:35%;
  border:1px solid red;
}

</style>
<br><br>
<div class="container">
    <h1>Notificações do Sistema</h1>

    <table class="table table-striped">
        <thead>
        </thead>
        <tbody>
            <% Notification.all.each do |notif| %>
                <% if notif.collection_id == nil %>
                    <tr><td><%= notif.message %></td></tr>
                <% elsif notif.collection_id == Collection.last.id %>
                    <% if notif.message == "Passou do peso limite, deve fazer uma licitação" %>
                        <tr class="error"><td><%= notif.message %></td></tr>
                    <% else %>
                        <tr class="warning"><td><%= notif.message %></td></tr>
                    <% end %>
                <% end %>
            <% end %>
        </tbody>
    </table>
<hr>
</div>

