<%= form_for(request) do |f| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <br>
  <div class="row">
    <div class="span6">
      <div class="field">
        <%= f.label :user_id, "Usuário" %>
        <%= f.collection_select(:user_id, User.order(:name), :id, :name) %>
      </div>
    </div>
    <div class="span6">
        <div class="field">
          <%= f.label :laboratory_id, "Laboratório" %>
          <%= f.collection_select(:laboratory_id, Laboratory.all.order(:name), :id, :name) %>
      </div>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>